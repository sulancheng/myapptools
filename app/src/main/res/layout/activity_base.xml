<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/guide_bcbc"
    android:layout_height="46dp"
    tools:context="com.susu.hh.myapptools.activity.BaseActivity">
        <ImageView
            android:id="@+id/left_click"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_width="18dp"
            android:layout_height="18dp" />
        <TextView
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:id="@+id/textTit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:id="@+id/textCont"
            android:layout_marginTop="-5dp"
            android:layout_below="@id/textTit"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/right_click"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_width="18dp"
            android:layout_height="18dp" />
</RelativeLayout>
